{
	"name": "midi-relay-hub",
	"productName": "Midi Relay Hub",
	"version": "3.6.0",
	"author": {
		"name": "Radicaldo",
		"email": "info@cloud-cost.com"
	},
	"description": "Midi Relay Hub: Orchestrating church automation with MIDI. Forked from midi-relay.",
	"main": "index.js",
	"scripts": {
		"start": "electron .",
		"format": "prettier -w .",
		"lint:raw": "eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg",
		"lint": "yarn lint:raw .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"distWin": "electron-builder --windows",
		"rebuild": "npx @electron/rebuild -f -w midi",
		"postinstall": "npx @electron/rebuild -f -w midi",
		"prepare": "husky",
		"check": "node --check index.js && node --check api.js && node --check midi.js && node --check util.js && node --check config.js && node --check logger.js && echo Syntax OK",
		"validate": "npm run check && npm run lint",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"build": {
		"appId": "com.midi.midi-relay-hub",
		"productName": "Midi Relay Hub",
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"category": "public.app-category.utilities",
			"icon": "static/icon.png",
			"identity": "Radicaldo (R2PY2DC3A4)",
			"extendInfo": {
				"NSApplicationSupportsSecureRestorableState": true,
				"electronTeamId": "R2PY2DC3A4"
			},
			"hardenedRuntime": true,
			"gatekeeperAssess": true,
			"entitlements": "entitlements.mac.plist",
			"entitlementsInherit": "entitlements.mac.plist"
		},
		"win": {
			"target": "nsis",
			"icon": "static/icon.ico"
		},
		"linux": {
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"armv7l",
						"arm64"
					]
				},
				{
					"target": "deb",
					"arch": [
						"x64",
						"armv7l",
						"arm64"
					]
				}
			],
			"icon": "static/icon.png"
		},
		"generateUpdatesFilesForAllChannels": false
	},
	"dependencies": {
		"electron-context-menu": "^3.0.0",
		"electron-debug": "^3.2.0",
		"electron-positioner": "^4.1.0",
		"electron-store": "^8.0.0",
		"electron-unhandled": "^3.0.2",
		"electron-updater": "^6.3.0",
		"electron-util": "^0.15.1",
		"express": "^4.18.1",
		"jquery": "^3.3.1",
		"jzz": "^1.9.6",
		"lodash": "^4.17.21",
		"socket.io": "^4.5.1"
	},
	"devDependencies": {
		"@electron/notarize": "^2.5.0",
		"@electron/rebuild": "^3.3.0",
		"electron": "^39.2.7",
		"electron-builder": "^25.1.8",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.3.3"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"lint-staged": {
		"*.js": [
			"prettier --write"
		]
	}
}
